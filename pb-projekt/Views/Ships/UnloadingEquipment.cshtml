@model List<pb_projekt.Models.UnloadingEquipment>

@{
    ViewData["Title"] = "Unloading Equipment";
}

<h2 class="header-text">Unloading Equipment for Ship</h2>

@if (Model.Any())
{
        <table class="primary">
            <thead>
                <tr>
                    <th>Serial Number</th>
                    <th>Equipment Type</th>
                    <th>Last Inspection Date</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var equipment in Model)
            {
                        <tr>
                            <td>@equipment.SerialNumber</td>
                            <td>@equipment.EquipmentType</td>
                            <td>@equipment.LastInspectionDate.ToString("yyyy-MM-dd")</td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>No unloading equipment assigned to this ship.</p>
}

<a href="@Url.Action("Index", "Ships")" style="text-decoration: none; color: blue;">Back to Ships</a>
