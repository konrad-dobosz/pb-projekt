@model pb_projekt.Models.LandShipment

@{
    ViewData["Title"] = "Land Shipment Cargo";
}

<h2 class="header-text">Land Shipment Cargo</h2>

@if (!Model.Cargoes.Any())
{
        <p style="text-align: center;">No cargo available for this land shipment.</p>
}
else
{
        <table class="primary">
            <thead>
                <tr>
                    <th>Serial Number</th>
                    <th>Security Level</th>
                    <th>Weight</th>
                    <th>Cargo Type</th>
                    <th>Destination Port</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var cargo in Model.Cargoes)
            {
                        <tr>
                            <td>@cargo.SerialNumber</td>
                            <td>@cargo.SecurityLevel</td>
                            <td>@cargo.Weight</td>
                            <td>@cargo.CargoType</td>
                            <td>@cargo.DestinationPort</td>
                        </tr>
            }
            </tbody>
        </table>
}
